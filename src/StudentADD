import React, {Component} from 'react';

class Student2 extends Component{

    constructor(props){
        super(props);
        this.state = {
            firstName: '',
            lastName: '',
            email: '',
            gpa: ''
        }

        this.handlefName = this.handlefName.bind(this);
        this.handlelName = this.handlelName.bind(this);
        this.handleEmail = this.handleEmail.bind(this);
        this.handleGpa = this.handleGpa.bind(this);
        this.onSubmit = this.onSubmit.bind(this);

        handleSubmit(event){
            const addStudent = {
                firstName  : this.state.firstName,
                lastName  : this.state.lasstName,
                email : this.state.email,
                gpa  : this.state.gpa,
            }
     
            this.createStudent(addStudent);
         }
    
        handlefName(event){
            event.preventDefault();
            this.setState({
                firstName: event.target.value
            });
        }
    }

    render(){

        return(
            <div>
            <form onSubmit = {this.onSubmit}>
                <h2> Add Student Form</h2>
            <label>
            Student's First Name:
            <input type = 'text' value={this.state.value} onChange = {this.handlefName}/>
            </label>
            <label>
            Student's Last Name:
            <input type = 'text'   value={this.state.value} onChange = {this.handlelName}/>
            </label>
            <label>
            Student's email:
            <input type = 'text' value={this.state.value} onChange = {this.handleEmail}/>
            </label>
            <label>
            Student's GPA:
            <input type = 'text'   value={this.state.value} onChange = {this.handleGpa}/>
            </label>
            <button type = 'submit' onClick={this.handleSubmit}/>
            </form>
            </div>
        )
    }
}

export default StudentADD;